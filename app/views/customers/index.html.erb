<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table id="datatables">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr class="clickable-row" data-customer=<%= customer.id %>>
        <td><%= customer.name %></td>
        <td><%= customer.city %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="items_grid" >
  <%= render partial: 'recharges', locals: { recharges: @recharges} %>
</div>

<%= link_to 'New Customer', new_customer_path, remote: true %>
